<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXComboBox?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-spacing: 15; -fx-padding: 15;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.project.lacliniqa.controllers.SetAppointmentController">
    <children>
        <MFXComboBox fx:id="appointmentTypeBox" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0"
                     prefWidth="170.0" promptText="Appointment Type"/>
        <MFXTextField fx:id="appointmentSubtypeField" layoutX="25.0" layoutY="25.0" minHeight="-Infinity"
                      minWidth="-Infinity" prefHeight="30.0" prefWidth="170.0" promptText="Appointment Subtype"/>
        <MFXComboBox fx:id="appointmentDatetimeBox" editable="false" minHeight="-Infinity" minWidth="-Infinity"
                     prefHeight="30.0" prefWidth="170.0" promptText="Select Date"/>
        <MFXButton alignment="CENTER" onAction="#handleSubmitButton" text="Submit"/>
        <Label fx:id="submitStatusLabel" textFill="#ea0909"/>
    </children>
</VBox>
